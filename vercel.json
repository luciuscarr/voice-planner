{
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install --prefix client",
  "devCommand": "cd client && npm run dev",
  "build": {
    "env": {
      "VITE_API_URL": "https://voice-planner.onrender.com/",
      "VITE_WEBSOCKET_URL": "wss://voice-planner.onrender.com/"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://voice-planner-api.onrender.com/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
